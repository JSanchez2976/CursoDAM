package ej03;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		Academia academia1=new Academia();
		Academia academia2=new Academia();
		System.out.println("RELLENAR ACADEMIA 1: ");
		academia1.rellenar();
		System.out.println("RELLENAR ACADEMIA 2:");
		academia2.rellenar();
		System.out.println("VISUALIZAR ACADEMIA 1: ");
		academia1.visualizar();
		System.out.println("VISUALIZAR ACADEMIA 2: ");
		academia2.visualizar();
		System.out.println("\n*** BUSCAR CURSO POR ACADEMIA ***");
		System.out.println("En que academia quieres buscar: ");
		String respuesta=in.nextLine();
		in.close();
	}

}
