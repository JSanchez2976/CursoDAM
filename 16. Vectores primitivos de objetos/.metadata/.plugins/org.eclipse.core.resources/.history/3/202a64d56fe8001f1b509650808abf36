package ej03;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		Academia[] academias=new Academia[2];
		for (int i = 0; i < academias.length; i++) {
			System.out.println("RELLENAR ACADEMIA "+i+": ");
			academias[i]=new Academia();
			academias[i].rellenar();
		}
		for (int i = 0; i < academias.length; i++) {
			System.out.println("VISUALIZAR ACADEMIA "+i+": ");
			academias[i].visualizar();
		}
		System.out.println("\n*** BUSCAR CURSO POR ACADEMIA ***");
		System.out.println("En que academia quieres buscar: ");
		String respuesta=in.nextLine();
		//revisar la academia que quiere
		for (int i = 0; i < academias.length; i++) {
			if(academias[i].getNombre().equalsIgnoreCase(respuesta)) {
				System.out.print("Que profesor quieres buscar: ");
				String profesor=in.nextLine();
				break;
			}
		}
		
		in.close();
	}

}
