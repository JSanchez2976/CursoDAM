package ej01;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.print("Cuantos coches vas a meter: ");
		int n = in.nextInt();
		Coche[] coches = new Coche[n];
		// rellenar todos los coches
		for (int i = 0; i < coches.length; i++) {
			coches[i] = new Coche();
			coches[i].rellenar();
		}
		// visualizar todos los datos del concesionario
		for (int i = 0; i < coches.length; i++) {
			System.out.println("COCHE " + (i + 1) + ": ");
			coches[i].visualizar();
		}
		// mostrar cantidad de la misma marca
		in.nextLine();
		System.out.print("Que marca quieres encontrar: ");
		String marca=in.nextLine();
		int numero=0;
		for (int i = 0; i < coches.length; i++) {
			numero=coches[i].cantidadModelosDeUnaMarca(marca);
		}
		System.out.println("Veces encontrado: "+numero);
		in.close();
	}
}
